{
    "compilerOptions": {
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "strict": false,
        "outDir": "./dist/node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist/*"
    ],
    "ts-node": {
        "typeCheck": true,
        "transpileOnly": true
    }
}
