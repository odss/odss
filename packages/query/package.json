{
  "name": "@odss/query",
  "version": "1.0.0",
  "description": "LDAP Query Helper",
  "license": "MIT",
  "source": "src/index.ts",
  "main": "dist/query.js",
  "module": "dist/query.mjs",
  "types": "dist/types/query.d.ts",
  "exports": {
    ".": {
      "import": "./dist/query.mjs",
      "require": "./dist/query.js"
    }
  },
  "scripts": {
    "build": "micropack",
    "dev": "npm run build -- --watch",
    "test": "mocha --require ts-node/register tests/*.ts",
    "karma": "karma start --single-run",
    "lint": "eslint src/*",
    "format": "prettier src/ tests --write",
    "prepare": "npm run build"
  },
  "files": [
    "README.md",
    "dist/*.*",
    "dist/types/*.d.ts"
  ],
  "devDependencies": {
    "@stool/micropack": "0.3.0",
    "@types/chai": "4.2.21",
    "@types/mocha": "8.2.3",
    "@types/node": "16.3.1",
    "@typescript-eslint/eslint-plugin": "4.28.3",
    "eslint": "7.30.0",
    "karma": "6.3.4",
    "karma-chrome-launcher": "3.1.0",
    "karma-firefox-launcher": "2.1.1",
    "karma-mocha": "2.0.1",
    "karma-typescript": "5.5.1",
    "mocha": "9.0.2",
    "prettier": "2.3.2",
    "ts-node": "10.1.0",
    "typescript": "4.3.5"
  }
}
