{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Node",
    "importHelpers": false,
    "experimentalDecorators": true,
    "noImplicitUseStrict": true,
    "noEmitOnError": false,
    "preserveConstEnums": true,
    "allowUnusedLabels": true,
    "outDir":"./src",
    "baseUrl": ".",
    "paths":{
      "odss-common": ["../odss-common"]
    }
  },
  "files": [
    "ts/bundle.ts",
    "ts/context.ts",
    "ts/events.ts",
    "ts/framework.ts",
    "ts/index.ts",
    "ts/loader.ts",
    "ts/registry.ts",
    "ts/utils.ts"
  ]
}
