{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "noImplicitUseStrict": true,
        "noImplicitThis": false,
        "strict": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "outDir": "./dist/esm",
        "declaration": true,
        "declarationDir": "./dist/types"
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist/*"
    ]
}
