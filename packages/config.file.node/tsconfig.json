{
    "compilerOptions": {
        "target": "esnext",
        "module": "CommonJS",
        "moduleResolution": "node",
        "declaration": true,
        "declarationDir": "./dist/types",
        "noImplicitAny": false,
        "removeComments": true,
        "strict": false,
        "allowSyntheticDefaultImports": true
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist/*"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}
