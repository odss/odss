{
    "compilerOptions": {
        "allowJs": true,
        "target": "esnext",
        "module": "ESNext",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "outDir": "./dist/"
    },
    "files": [
        "src/index.ts"
    ],
    "exclude": [
        "node_modules",
        "dist/*"
    ],
    "ts-node": {
        "transpileOnly": true
    }
}
